    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI (with venv activation)",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/backend/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}/backend",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend/app"
            },
            "jinja": true
        },
        {
            "name": "Expo: Start React Native App",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "command": "npx expo start"
        },
        {
            "name": "Vite: Start Web App",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/web",
            "command": "npm run dev"
        },
        {
            "name": "Run Android Emulator (AVD)",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "command": "emulator -avd Medium_Phone_API_35"
        },
        {
            "name": "Run NGrok webhook",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "command": "ngrok http 8000"
        }
    ],
    "python.defaultInterpreterPath": "${workspaceFolder}/backend/venv/Scripts/python.exe"
}